<!DOCTYPE html>
<html>

<head>
    <title>Customer List</title>
    <link rel="stylesheet" href="style.css">
    <link href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet">

    <style>
        body {
            background-color: black;
        }

        .container {
            max-width: 800px;
            margin: 0 auto;
            padding: 20px;
        }

        h1 {
            font-size: 32px;
            text-align: center;
            color: #eb9e10;
        }

        table {
            width: 100%;
            border-collapse: collapse;
            margin-top: 20px;
        }

        th,
        td {
            padding: 10px;
            text-align: left;
            border-bottom: 1px solid #eb9e10;
        }

        th {
            background-color: #eb9e10;
            font-weight: bold;
        }

        td {
            background-color: #fff;
        }

        tr.r:hover {
            color: #eb9e10;
        }

        button.btn {
            background-color: #eb9e10;
            border-radius: 25px;
            margin-bottom: 10px;
            border: #fff;
        }

        button.btn:hover {
            background-color: #242323;
            color: #eb9e10;
        }

        /* Responsive Styles */
        @media screen and (max-width: 600px) {
            .container {
                padding: 10px;
            }

            h1 {
                font-size: 24px;
            }

            table {
                font-size: 14px;
            }
        }
    </style>
    </script>
</head>

<body>
    <%- include("./partials/Nav.ejs") %>
    <div class="container">
        <h1>Product List</h1>
        <center><a href="Add_Product"><button class="btn">Add</button></a></center>
        <center><a href="#"><button class="btn">Delete All</button></a></center>
        <% if (Allproducts.length > 0) { %>
        <table id="product-table">
            <tr>
                <th>Name</th>
                <th>Description</th>
                <th>Price</th>
                <th>Quantity</th>
                <th>Delete</th>
            </tr>
            <% Allproducts.forEach(emp=> { %>
            <tr class="r">
                <td><%= emp.ProductName %></td>
                <td><%= emp.Description %></td>
                <td><%= emp.Price %> LE</td>
                <td><%= emp.Quantity %></td>
                <td>
                    <form action="/deleteP" method="POST">
                        <button type="submit" name="id" value="<%= emp._id %>">Delete</button>
                    </form>
                    <a href="/editp/<%= emp._id %>">Edit</a>
                </td>
            </tr>
            <% }) %>
        </table>
        <% } else { %>
        <p>There are no products to display...</p>
        <% } %>
    </div>
    <script src="script.js"></script>
</body>

</html>
