<!DOCTYPE html>
<html>
<!DOCTYPE html>
<html>

<head>
  <title>Products List</title>
  <link rel="stylesheet" href="style.css">
  <link href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet">

  <link rel="stylesheet" href="/CSS/Editproducts.css">

  <title>Edit Product</title>

</head>
 


<body>
  <%- include("./partials/nav.ejs") %>
    <div class="user-edit-sheet">
      <h1>Edit Product</h1>

      <form class="ab" action="/admin/editp/<%= pproduct._id %>" method="POST" enctype="multipart/form-data">
        <div class="form-group">
          <label for="product-Name">Product Name:</label>
          <input type="text" id="product-Name" name="Name" value="<%= pproduct.ProductName%>">
        </div>
        <div class="form-group">
          <label for="product-Description">Product Description:</label>
          <input type="text" id="product-Description" name="Description" value="<%= pproduct.Description %>">
        </div>
        <div>
          <label for="product-Description">Product Description:</label>
          <input type="text" id="product-Description" name="psdescription" value="<%= pproduct.Smalldesc %>">
        </div>
        <div class="form-group">
          <label for="product-Price">Product Price:</label>
          <input type="number" id="product-Price" name="Price" value="<%= pproduct.Price %>">
        </div>
        <label for="product-Quantity">Product Quantity:</label>
        <input type="number" id="product-Quantity" name="Quantity" value="<%= pproduct.Quantity %>">
        <div class="form-group">
          <button type="submit">Update Product</button>
          <a href="/">Cancel</a>
        </div>
        </form>
        </div>

    </div>
    
</body>

</html>