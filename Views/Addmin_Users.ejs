<!DOCTYPE html>
<html>

<head>
    <title>Customer List</title>
    <link rel="stylesheet" href="style.css">
    <link href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet">

    <style>
        body {
            background-color: black;
        }

        .container {
            max-width: 800px;
            margin: 0 auto;
            padding: 20px;
        }

        h1 {
            font-size: 32px;
            text-align: center;
            color: #eb9e10;
        }

        table {
            width: 100%;
            border-collapse: collapse;
            margin-top: 20px;
        }

        th,
        td {
            padding: 10px;
            text-align: left;
            border-bottom: 1px solid #eb9e10;
        }

        th {
            background-color: #eb9e10;
            font-weight: bold;
        }

        td {
            background-color: #fff;
        }

        tr:hover {
            color: #eb9e10;
        }
    </style>
    </script>
</head>

<body>
    <%- include("./partials/nav.ejs") %>
  
      <div class="container">
        <h1>Users List</h1>
  
        <% if (Allusers.length> 0) { %>
          <table id="customer-table">
            <tr>
              <th>Name</th>
              <th>Position</th>
              <th>Phone</th>
              <th>E-mail</th>
              <th>Action</th>
            </tr>
            <% Allusers.forEach(emp=> { %>
              <tr>
                <td>
                  <%= emp.Name %>
                </td>
                <td>
                  <%= emp.Type %>
                </td>
                <td><%= emp.Phone %></td>
                <td><%= emp.Email %></td>
                <td>
                    <a href="/Edit_Users"><button>Edit</button></a>
                    <a href="#"><button>Delet</button></a>
                </td>
              </tr>
              <% }) %>
          </table>
          <% } else { %>
            <p>There are no employees to display...</p>
            <% } %>
  
      </div>
  
  </body>

</html>