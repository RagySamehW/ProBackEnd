<!DOCTYPE html>
<html>

<head>
    <title>Customer List</title>
    <link rel="stylesheet" href="style.css">
    <link href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet">

    <style>
        body {
            background-color: black;
        }

        .container {
            max-width: 800px;
            margin: 0 auto;
            padding: 20px;
        }

        h1 {
            font-size: 32px;
            text-align: center;
            color: #eb9e10;
        }

        table {
            width: 100%;
            border-collapse: collapse;
            margin-top: 20px;
        }

        th,
        td {
            padding: 10px;
            text-align: left;
            border-bottom: 1px solid #eb9e10;
        }

        th {
            background-color: #eb9e10;
            font-weight: bold;
        }

        td {
            background-color: #fff;
        }

        tr:hover {
            color: #eb9e10;
        }

        /* Responsive Styles */
        @media screen and (max-width: 600px) {
            h1 {
                font-size: 24px;
            }

            table {
                font-size: 12px;
            }
        }
    </style>
</head>

<body>
    <%- include("./partials/nav.ejs") %>

    <div class="container">
        <h1>Users List</h1>

        <% if (Allusers.length > 0) { %>
        <table id="customer-table">
            <tr>
                <th>Name</th>
                <th>Id</th>
                <th>Position</th>
                <th>Phone</th>
                <th>E-mail</th>
                <th>Action</th>
            </tr>
            <% Allusers.forEach(emp=> { %>
            <tr>
                <td>
                    <%= emp.Name %>
                </td>
                <td>
                    <%= emp._id %>
                </td>
                <td>
                    <%= emp.Type %>
                </td>
                <td><%= emp.Phone %></td>
                <td><%= emp.Email %></td>
                <td>
                    <form action="/admin/delete" method="POST">
                        <button type="submit" name="id" value="<%= emp._id %>">Delete</button>
                    </form>
                    <a href="/admin/edit/<%= emp._id %>">Edit</a>
                </td>
            </tr>
            <% }) %>
        </table>
        <% } else { %>
        <p>There are no employees to display...</p>
        <% } %>

    </div>
</body>

</html>
