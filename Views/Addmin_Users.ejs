<!DOCTYPE html>
<html>

<head>
    <title>Customer List</title>
    <link rel="stylesheet" href="style.css">
    <link href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet">

    <link rel="stylesheet" href="/CSS/Addmin_Users.css">

    <style>
    </style>
</head>

<body>
    <%- include("./partials/nav.ejs") %>

    <div class="container">
        <h1>Users List</h1>

        <% if (Allusers.length > 0) { %>
        <table id="customer-table">
            <tr>
                <th>Name</th>
                <th>Id</th>
                <th>Position</th>
                <th>Phone</th>
                <th>E-mail</th>
                <th>Action</th>
            </tr>
            <% Allusers.forEach(emp=> { %>
            <tr>
                <td>
                    <%= emp.Name %>
                </td>
                <td>
                    <%= emp._id %>
                </td>
                <td>
                    <%= emp.Type %>
                </td>
                <td><%= emp.Phone %></td>
                <td><%= emp.Email %></td>
                <td>
                    <form action="/admin/delete" method="POST">
                        <button type="submit" name="id" value="<%= emp._id %>">Delete</button>
                    </form>
                    
                    <a href="/admin/edit/<%= emp._id %>">Edit</a>
                </td>
            </tr>
            <% }) %>
        </table>
        <% } else { %>
        <p>There are no employees to display...</p>
        <% } %>

    </div>
</body>

</html>
